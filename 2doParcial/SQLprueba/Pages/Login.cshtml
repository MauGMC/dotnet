@page
@model SQLprueba.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<link rel="stylesheet" href="~/css/sweetalert2.css" />
<script src="~/js/sweetalert2.all.min.js"></script>
<div class="container-fluid login-container d-flex">
    <div class="col-md-6 login-image d-none d-md-block"></div>

    <div class="col-md-6 d-flex align-items-center justify-content-center p-4">
        <div class="login-form-box shadow p-4 rounded bg-light">
            <h2 class="mb-4 text-center">Iniciar sesión</h2>
            <form method="post" asp-page-handler="login" autocomplete="off">
                <div class="mb-3">
                    <label asp-for="Usuarios.usuario" class="form-label fw-bold">Usuario</label>
                    <input asp-for="Usuarios.usuario" class="form-control" placeholder="Ingresa tu usuario" />
                    <span asp-validation-for="Usuarios.usuario" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Usuarios.password" class="form-label fw-bold">Contraseña</label>
                    <input asp-for="Usuarios.password" type="password" class="form-control" placeholder="Ingresa tu contraseña" />
                    <span asp-validation-for="Usuarios.password" class="text-danger small"></span>
                </div>

                <div class="d-flex flex-column align-items-stretch">
                    <button type="submit" class="btn btn-success mb-0">Iniciar sesión</button>
                    <a href="#" id="mostrarRegistro" class="btn btn-link mb-0">Registrarme</a>
                    <a href="#" id="mostrarForgot" class="btn btn-link mb-0">Olvidé contraseña</a>
                    
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="Signup" tabindex="-1" aria-labelledby="SignupLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content">
            @await Html.PartialAsync("Signup", Model.Signup)
        </div>
    </div>
</div>
<div class="modal fade" id="Forgot" tabindex="-1" aria-labelledby="ForgotLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content">
            @await Html.PartialAsync("Forgot", Model.Forgot)
        </div>
    </div>
</div>

<style>
    .login-container {
        min-height: 100vh;
    }

    .login-image {
        background-image: url('/images/login.jpg');
        background-size: cover;
        background-position: center;
    }

    .login-form-box {
        max-width: 400px;
        width: 100%;
    }
</style>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script>
    $(document).ready(function () {
        $('#mostrarRegistro').click(function (e) {
            e.preventDefault();
            const modal = new bootstrap.Modal(document.getElementById('Signup'));
            modal.show();
        });
    });
    $(document).ready(function () {
        $('#mostrarForgot').click(function (e) {
            e.preventDefault();
            const modal = new bootstrap.Modal(document.getElementById('Forgot'));
            modal.show();
        });
    });
</script>
