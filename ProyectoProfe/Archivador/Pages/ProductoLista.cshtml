@page
@model ProductoListaModel
@{
    ViewData["Title"] = "Lista de Productos";
}
<h1>@ViewData["Title"]</h1>

<table id="tblLista" class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model.Productos)
        {
            <tr>
                <td>@producto.Id</td>
                <td>@producto.Nombre</td>
                <td>@producto.Precio</td>
                <td>
                    <a asp-page="./ProductoDetalles" asp-route-id="@producto.Id">Detalles</a> |
                    <a asp-page="./ProductoEditar" asp-route-id="@producto.Id">Editar</a> |
                    <a asp-page="./ProductoEliminar" asp-route-id="@producto.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="4">
                <a asp-page="./ProductoMto" asp-route-id="-1">Crear Nuevo Producto</a>
            </td>
        </tr>
    </tfoot>
</table>

<!-- Definición de ejecución de scripts 'a posterori' a la carga de la página -->
@section Scripts {
    <script>
        $(document).ready(function() {
            let table = new DataTable('#tblLista');
        });
    </script>
}
