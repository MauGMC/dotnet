@page "{idProducto:int}"
@model SQLprueba.Pages.EliminarModel
@{
    ViewData["Title"] = "Eliminar producto";
}

<h2>¿Estás seguro de que deseas eliminar este producto?</h2>

<form method="post" asp-page-handler="OnPost" autocomplete="off">
    <input type="hidden" name="id" value="-1" />
    <input type="hidden" asp-for="Producto.ID" />

    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Producto.Nombre</dd>

        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.Producto.Descripcion</dd>

        <dt class="col-sm-2">Precio</dt>
        <dd class="col-sm-10">@Model.Producto.Precio</dd>

        <dt class="col-sm-2">Cantidad</dt>
        <dd class="col-sm-10">@Model.Producto.Cantidad</dd>

        <dt class="col-sm-2">Categoría</dt>
        <dd class="col-sm-10">@Model.Producto.Categoria</dd>
    </dl>

    <div class="mb-3">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-page="/Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
